= form_with model: [article, article.comments.build] do |form|
  .mb-4.mt-4
    = form.label :commenter, class: "form-label"
    = form.text_field :commenter, class: "form-control"

  .mb-4
    = form.label :body, class: "form-label"
    = form.text_area :body, class: "form-control"

  .mb-4
    = form.label :status, class: "form-label"
    = form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: "form-select"

  .mt-4
    = form.submit "Upload comment", class: "btn btn-primary"
